<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 

<hibernate-mapping>
   <class name = "entity.User" table = "user">
      
      <meta attribute = "class-description">
         This class contains User attributes. 
      </meta>
      
      <id name = "id" type = "int" column = "id">
         <generator class="native"/>
      </id>
      
      <!-- 		name in java class				name in db							type in java class -->
      <property name = "id" 				column = "userId" 				type = "int"/>
      <property name = "email" 				column = "email" 				type = "string"/>
      <property name = "password" 				column = "password" 				type = "string"/>
      <property name = "firstName" 				column = "firstName" 				type = "string"/>
      <property name = "lastName" 				column = "lastName" 				type = "string"/>
      <property name = "phone_number" 				column = "phone_number" 				type = "string"/>
      <property name = "address" 				column = "address" 				type = "string"/>
      <property name = "rank" 				column = "typeID" 				type = "int"/>
      <property name = "status" 				column = "status" 				type = "int"/>
   </class>
</hibernate-mapping>