<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 

<hibernate-mapping>
   <class name = "entity.Promotion" table = "promotion">
      
      <meta attribute = "class-description">
         This class contains Promotion attributes. 
      </meta>
      
      <id name = "id" type = "int" column = "id">
         <generator class="native"/>
      </id>
      
      <!-- 		name in java class				name in db							type in java class -->
      <property name = "id" 				column = "id" 				type = "int"/>
      <property name = "exp_date" 				column = "exp_date" 				type = "Date"/>
      <property name = "code" 				column = "code" 				type = "string"/>
      <property name = "percent_discount" 				column = "percent_discount" 				type = "int"/>
   </class>
</hibernate-mapping>