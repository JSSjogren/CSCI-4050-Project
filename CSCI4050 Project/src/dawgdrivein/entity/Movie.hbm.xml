<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 

<hibernate-mapping>
   <class name = "entity.Movie" table = "movie">
      
      <meta attribute = "class-description">
         This class contains Movie attributes. 
      </meta>
      
      <!-- Primary Key -->
      <id name = "id" type = "int" column = "id">
         <generator class="native"/>
      </id>
      
      <!-- 		name in java class				name in db							type in java class -->
      <property name = "genre" 				column = "genre" 				type = "string"/>
      <property name = "cast" 				column = "cast" 				type = "string"/>
      <property name = "director" 				column = "director" 				type = "string"/>
      <property name = "producer" 				column = "producer" 				type = "string"/>
      <property name = "description" 				column = "description" 				type = "string"/>
      <property name = "trailer_picture" 				column = "trailer_picture" 				type = "string"/>
      <property name = "trailer_video" 				column = "video" 				type = "string"/>
      <property name = "MPAA_rating" 				column = "MPAA_rating" 				type = "string"/>
      <property name = "status" 				column = "status" 				type = "int"/>
   </class>
</hibernate-mapping>