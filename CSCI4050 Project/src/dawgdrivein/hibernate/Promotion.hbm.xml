<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 

<hibernate-mapping>
   <class name = "entity.Promotion" table = "promotion">
      
      <meta attribute = "class-description">
         This class contains Promotion attributes. 
      </meta>
      
      <!-- Primary Key -->
      <id name = "code" type = "string" column = "code"></id>
      
      <!-- 		name in java class				name in db							type in java class -->
      <property name = "percent_discount" 		column = "discount" 				type = "int"/>
   	  <!-- exp_date is anonted in class due to data-type Date issues -->
   	  
   </class>
</hibernate-mapping>