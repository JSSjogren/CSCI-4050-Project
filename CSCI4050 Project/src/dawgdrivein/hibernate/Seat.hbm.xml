<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 

<hibernate-mapping>
   <class name = "entity.Seat" table = "seat">
      
      <meta attribute = "class-description">
         This class contains Seat attributes. 
      </meta>
      
      <!-- Primary Key -->
      <id name = "id" type = "int" column = "id">
         <generator class="native"/>
      </id>
      
      <!-- 		name in java class				name in db							type in java class -->
      <property name = "hall_id" 			column = "hall_id" 				type = "int"/>
      <property name = "seat" 			column = "seat" 			type = "int"/>
      <property name = "showtimeID" 			column = "showtimeID" 			type = "int"/>
      <property name = "ticketID" 			column = "ticketID" 			type = "int"/>
   </class>
</hibernate-mapping>