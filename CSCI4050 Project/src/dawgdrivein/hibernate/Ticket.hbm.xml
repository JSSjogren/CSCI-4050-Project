<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 

<hibernate-mapping>
   <class name = "entity.Ticket" table = "ticket">
      
      <meta attribute = "class-description">
         This class contains Ticket attributes. 
      </meta>
      
      <!-- Primary Key -->
      <id name = "ticketNo" type = "int" column = "id">
         <generator class="native"/>
      </id>
      
      <!-- 		name in java class				name in db							type in java class -->
      <property name = "bookingID" 			column = "bookingID" 					type = "int"/>
      <property name = "showtimeID" 			column = "showtimeID" 					type = "int"/>
      <property name = "movieID" 			column = "movieID" 						type = "int"/>
      <property name = "seatID"	 			column = "seatID" 						type = "int"/>
   </class>
</hibernate-mapping>